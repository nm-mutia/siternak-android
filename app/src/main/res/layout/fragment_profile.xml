<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:orientation="vertical"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rc_bottom_primary"
                android:paddingVertical="24dp">
                <TextView
                    android:id="@+id/tv_siternak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="SITERNAK"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_siternak"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:text="Profil"
                    android:textColor="@color/white"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/tv_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dashboard"
                    android:text="Navinda Meutia"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:textSize="20sp"/>
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="24dp"
                android:background="@drawable/rc_white">

                <TableRow>
                    <ImageView
                        android:src="@drawable/ic_assignment_ind"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/sourcesanspro_semibold"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mutia"
                        android:layout_marginLeft="24dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/sourcesanspro_regular"/>
                </TableRow>
                <TableRow>
                    <ImageView
                        android:src="@drawable/ic_account_box"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/sourcesanspro_semibold"/>
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mutia"
                        android:layout_marginLeft="24dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/sourcesanspro_regular"/>
                </TableRow>
                <TableRow>
                    <ImageView
                        android:src="@drawable/ic_email"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/sourcesanspro_semibold"/>
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mutia"
                        android:layout_marginLeft="24dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/sourcesanspro_regular"/>
                </TableRow>
                <TableRow>
                    <ImageView
                        android:src="@drawable/ic_accessibility"
                        android:layout_width="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Role"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/sourcesanspro_semibold"/>
                    <TextView
                        android:id="@+id/tv_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mutia"
                        android:layout_marginLeft="24dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/sourcesanspro_regular"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG OUT"
                android:fontFamily="@font/sourcesanspro_bold"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="16dp"
                android:gravity="end"
                android:background="@drawable/rc_danger"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:elevation="4dp"
                android:translationZ="4dp"
                android:foreground="?attr/selectableItemBackground"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>